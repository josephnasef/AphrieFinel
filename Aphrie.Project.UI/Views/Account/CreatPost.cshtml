@model Aphrie.Project.UI.Models.PostViewModel

@{
    ViewBag.Title = "Make new Post";
    }
    <div class="hidden">   </div>
@using (Html.BeginForm("CreatPost", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-horizontal">
            <h2>Make new post </h2>
            <hr />
            <div class="form-group"style=" padding-right: 80px">
                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
                <br />
                <div class="col-md-4" style="padding-right: 28px;">
                    <input type="file" name="ImageFile" required style="padding-right: 28px;"/>
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group " style="text-align:left">
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                <br />
                <div class="col-md-4" style="margin-left: -80px; margin-top: 34px;">
                    @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">

                    <input type="submit" value="Create" class="btn btn-success" />

                    @Html.ActionLink("Back to List", "Index", "Home", null, new { @class = "btn btn-danger" })
                </div>
            </div>
            <div>

            </div>
        </div>
    </div>
}

@Scripts.Render("~/bundles/jqueryval")
